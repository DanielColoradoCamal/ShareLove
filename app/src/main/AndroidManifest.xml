<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.bedu.sharelove">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ShareLove">
        <activity
            android:name=".Perfil"
            android:exported="true"
            android:label="@string/title_activity_perfil"
            android:theme="@style/Theme.ShareLove.NoActionBar" />
        <activity android:name=".Seleccionar" android:theme="@style/Theme.ShareLove2"/>
        <activity android:name=".Compartiendo" android:theme="@style/Theme.ShareLove2"/>
        <activity android:name=".Comida" android:theme="@style/Theme.ShareLove2" />
        <activity android:name=".Articulos" android:theme="@style/Theme.ShareLove2" />
        <activity android:name=".RecuperarContrasena" />
        <activity android:name=".VistaPrincipal" />
        <activity android:name=".CrearCuenta" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>