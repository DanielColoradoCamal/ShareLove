<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"

        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="387dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Media -->

            <ImageView
                android:id="@+id/imgProduct"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:contentDescription="@+Product/tvProduct"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/hotdog" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Title, secondary and supporting text -->
                <TextView
                    android:id="@+id/tvProduct"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Titulo"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    android:textColor="@color/texto_100" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/montserrat"
                    android:text="@string/description"
                    android:textAppearance="?attr/textAppearanceBody2"
                    android:textColor="@color/texto"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvDescription"
                    android:layout_width="258dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="32dp"
                    android:fontFamily="@font/montserrat"
                    android:text="Detalle descricion"
                    android:textAppearance="?attr/textAppearanceBody2"
                    android:textColor="@color/texto" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center|center_vertical"

                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/location"
                        android:layout_width="33dp"
                        android:layout_height="match_parent"
                        android:visibility="visible"
                        app:icon="@drawable/map_marker"
                        app:srcCompat="@drawable/map_marker" />

                    <TextView
                        android:id="@+id/tvQuantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|top|center_vertical"
                        android:layout_marginTop="16dp"
                        android:fontFamily="@font/montserrat"
                        android:gravity="center"
                        android:text="distancia"
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:textColor="@color/texto" />

                    <TextView
                        android:id="@+id/km"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|top|center_vertical"
                        android:layout_marginTop="16dp"
                        android:fontFamily="@font/montserrat"
                        android:gravity="center"
                        android:text="km"
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:textColor="@color/texto" />


                </LinearLayout>

            </LinearLayout>

            <!-- Buttons -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginBottom="8dp"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    style="?attr/borderlessButtonStyle"
                    android:layout_width="345dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="128dp"
                    android:baselineAligned="false"
                    android:text="@string/btn_pedir"
                    android:textAllCaps="false"
                    android:textSize="18sp" />


            </LinearLayout>


        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>